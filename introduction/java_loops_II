import java.util.Scanner;
import java.lang.Math;

class Solution {

  static private final int EXPONENT = 2;
  
  public static void loops(int firstNumber, int secondNumber, int power, int temporaryResult) {
    temporaryResult += firstNumber;
    for(int j = 0; j < power; j++) {
      temporaryResult += secondNumber * Math.pow(EXPONENT, j);
      System.out.printf(temporaryResult + " ");
    }  
    System.out.printf("\n");
  }
  
  public static void main(String []args) {
    Scanner input = new Scanner(System.in);
      int numberOfLines = input.nextInt();
      int result = 0;
        for(int lineNumber = 0; lineNumber < numberOfLines; lineNumber++) {
          int firstValue = input.nextInt();
          int secondValue = input.nextInt();
          int exponentValue = input.nextInt();
          loops(firstValue, secondValue, exponentValue, result);
          result = 0;
        }
        input.close();
  }
}
